<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/idImageView"
        android:layout_width="184dp"
        android:layout_height="178dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="4"
        android:contentDescription="@string/todo"
        android:src="@drawable/menu_icon"
        app:layout_constraintBottom_toBottomOf="@+id/RotateAntiClock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RotateClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/rotateclock"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/RotateAntiClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="@string/rotateanticlock"
        app:layout_constraintBottom_toTopOf="@+id/RotateClock"
        tools:layout_editor_absoluteX="4dp" />


</android.support.constraint.ConstraintLayout>